extends ../shared/template
block content
  .row
    .col-xs-4
      form(role='form', method='post', action='/vacations')
        input#lat(type='hidden', name='lat')
        input#lng(type='hidden', name='lng')
        .form-group
          label(for='name') Vacation Name
          input#name.form-control(type='text', placeholder='Enter Vacation Name', name='name', autofocus=true)
        .form-group
         label(for='start') Start Date
           input#start.form-control(type='date', placeholder='start', name='start')
        .form-group
         label(for='end') End Date
           input#end.form-control(type='date', placeholder='end', name='end')
        button.btn.btn-default(type='submit') Add Vacation
     .col-xs-8




block scripts
  script(src='/js/user/new-vacation.js')

